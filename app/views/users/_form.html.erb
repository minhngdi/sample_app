<%= form_with model: @user, local: true, url: yield(:use_path) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.label User.human_attribute_name :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label User.human_attribute_name :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label User.human_attribute_name :password %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label User.human_attribute_name :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.submit yield(:button_text) , class: "btn btn-primary" %>
<% end %>
