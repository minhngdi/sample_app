<% provide :title, t(".page_name") %>
<% provide :button_text, t(".save_btn") %>
<% provide :use_path, user_path(current_user.id) %>
<h1><%= t ".page_title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank"><%= t ".change"%></a>
    </div>
  </div>
</div>
