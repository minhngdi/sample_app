<% provide :title, t(".page_name") %>
<h1><%= t ".page_name" %></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with model: @user, local: true, url: signup_path do |f| %>
        <%= render "shared/error_messages" %>

        <%= f.label User.human_attribute_name :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label User.human_attribute_name :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label User.human_attribute_name :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label User.human_attribute_name :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit User.human_attribute_name(:create_account_btn) , class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
