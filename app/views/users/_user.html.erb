<li>
  <%= gravatar_for user, size: Settings.gravatar.list_size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user.current_user?(user) %>
    | <%= link_to t(".delete"), user, method: :delete,
                                  data: { confirm: t(".delete_confirm") } %>
  <% end %>
</li>
